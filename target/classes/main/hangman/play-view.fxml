<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>


<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.hangman.HelloController">
    <padding>
        <Insets
                bottom="20.0"
                left="20.0"
                right="20.0"
                top="20.0"
        />
    </padding>

    <Label
            fx:id="playText1"
            style="-fx-font-size: 50px;"
            text="Playing!"
    />

    <Text
            fx:id="information"
            style="-fx-font-size: 50px;"
    />

    <Button
            fx:id="playingButton"
            style="-fx-background-color: blue; -fx-font-size: 50px; -fx-text-fill: white;"
            text="Choose word"
            onAction="#onPlayingButtonClick"
    />
</VBox>
